<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contratos</title>
  </head>
  <body>
    <%- include('nav') %>
    <h1>Contratos</h1>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Tipo</th>
          <th>Local do Evento</th>
          <th>CEP</th>
          <th>Apelido</th>
          <th>ID Usuário</th>
          <th>ID Contratante</th>
        </tr>
      </thead>
      <tbody>
        <% contratos.forEach(function(contrato) { %>
        <tr>
          <td><%= contrato.idContrato %></td>
          <td><%= contrato.tipo %></td>
          <td><%= contrato.localEven %></td>
          <td><%= contrato.cep %></td>
          <td><%= contrato.apelido %></td>
          <td><%= contrato.idUsuario %></td>
          <td><%= contrato.idContratante %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <h2>Adicionar Contrato</h2>
    <form action="/adicionarContrato" method="post">
      <label for="tipo">Tipo:</label>
      <input type="text" name="tipo" required /><br />

      <label for="localEven">Local do Evento:</label>
      <input type="text" name="localEven" required /><br />

      <label for="cep">CEP:</label>
      <input type="text" name="cep" required /><br />

      <label for="apelido">Apelido:</label>
      <input type="text" name="apelido" required /><br />

      <label for="idUsuario">ID Usuário:</label>
      <input type="number" name="idUsuario" required /><br />

      <label for="idContratante">ID Contratante:</label>
      <input type="number" name="idContratante" required /><br />

      <button type="submit">Adicionar Contrato</button>
    </form>
  </body>
</html>
