            PERFIL
        </a>
    </div>

    <div class="main-content">
        <div class="product-header">
            <button class="back-button">‚Üê</button>
            <div class="product-info">
                <img src="public/assets/icons/testeImagem.jpg" alt="<%= product.name %>" class="product-image">
                <div class="product-details">
                    <div>NOME</div>
                    <div><%= product.name %></div>
                </div>
                <div class="product-details">
                    <div>CATEGORIA</div>
                    <div><%= product.category %></div>
                </div>
                <div class="product-details">
                    <div>TOTAL</div>
                    <div><%= product.total %></div>
                </div>
                <div class="product-details">
                    <div>PRE√áO</div>
                    <div>R$ <%= product.price.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %></div>
                </div>
            </div>
            <button class="description-btn" title="Descri√ß√£o">üí¨</button>
        </div>

        <div class="search-section">
            <div class="search-bar">
                <input type="text" class="search-input" placeholder="Buscar por ID">
                <button class="filter-btn">üîç Filtros</button>
            </div>
            <button class="add-item-btn">+ ITEM</button>
        </div>

        <table class="items-table">
            <thead>
                <tr>
                    <th><input type="checkbox"></th>
                    <th>C√≥digo ‚Üë</th>
                    <th>Data de Cadastro ‚Üë</th>
                    <th>Data de Reserva ‚Üë</th>
                    <th>Data de Revolu√ß√£o ‚Üë</th>
                    <th>Status ‚Üë</th>
                    <th>A√ß√µes</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(function(item) { %>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>#<%= item.code %></td>
                        <td><%= new Date(item.registerDate).toLocaleDateString('pt-BR') %></td>
                        <td><%= item.reservationDate ? new Date(item.reservationDate).toLocaleDateString('pt-BR') : '-' %></td>
                        <td><%= item.returnDate ? new Date(item.returnDate).toLocaleDateString('pt-BR') : '-' %></td>
                        <td>
                            <div class="status status-<%= item.status.toLowerCase() %>">
                                <span class="status-dot"></span>
                                <%= item.status %>
                            </div>
                        </td>
                        <td>
                            <button class="action-btn view-btn">üëÅÔ∏è</button>
                            <button class="action-btn delete-btn" title="Remover">üóëÔ∏è</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

