<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciamento de Manutenção</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 100px;
            height: 100vh;
            background-color: #e8e3d9;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .main-content {
            margin-left: 100px; /* Espaço para a sidebar */
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-bar {
            display: flex;
            gap: 10px;
        }

        .search-input {
            padding: 8px 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            width: 300px;
        }

        .add-contract-btn {
            padding: 8px 20px;
            background-color: #4c5faf;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .manutencao-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .manutencao-table th,
        .manutencao-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .manutencao-table th {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <%- include('../assets/menu.ejs') %>
    <div class="main-content">
        <div class="header">
            <h2>Manutenções</h2>
            <button class="add-contract-btn"><a href="/manutencao/adicionar" style="color: white; text-decoration: none;">+ MANUTENÇÃO</a></button>
        </div>

        <div class="search-bar">
            <input type="text" class="search-input" id="searchInput" placeholder="Buscar por nome de grupo ou responsável" onkeyup="filterTable()">
        </div>

        <table class="manutencao-table" id="manutencaoTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome do Grupo</th>
                    <th>Responsável</th>
                    <th>Motivo</th>
                    <th>Data de Início</th>
                    <th>Data de Retorno</th>
                    <th>Itens</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                <% Object.keys(itensEmManutencao).forEach(grupoId => { %>
                    <% const manutencao = itensEmManutencao[grupoId]; %>
                    <tr>
                        <td><%= manutencao.idManutencao %></td>
                        <td><%= manutencao.nomeGrupo %></td>
                        <td><%= manutencao.responsavel %></td>
                        <td><%= manutencao.motivo %></td>
                        <td><%= new Date(manutencao.dataInic).toLocaleString() %></td>
                        <td><%= new Date(manutencao.dataRetorno).toLocaleString() %></td>
                        <td><%= manutencao.itens.map(item => item.codBarras).join(', ') %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script>
        
    </script>
</body>
</html>